{% extends "BaklavaBorekBundle::layout.html.twig" %}

{% block content %}
    <a class="index-create-measurement" href="{{ path('BaklavaBorekBundle_Measurement_create') }}"><button type="button" class="btn btn-success">{{ "Create Measurement" | trans }}</button></a>

    <table class="measurement-data-table table table-striped table-bordered">
        <thead>
            <tr>
                <th>{{ "ID" | trans }}</th>
                <th>{{ "name" | trans }}</th>
                <th>{{ "Created At" | trans }}</th>
                <th>{{ "Updated At" | trans }}</th>
                <th>{{ "Operations" | trans }}</th>
            </tr>
        </thead>

        <tbody>
            {% for measurement in measurements %}
                <tr>
                    <td>{{ measurement.id }}</td>
                    <td>{{ measurement.name }}</td>
                    <td>{{ measurement.created|date('Y-m-d') }}</td>
                    <td>{{ measurement.updated|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('BaklavaBorekBundle_Measurement_edit', {'measurementId': measurement.id}) }}"><button type="button" class="btn btn-primary">{{ "Edit" | trans }}</button></a>
                        <a href="{{ path('BaklavaBorekBundle_Measurement_delete', {'measurementId': measurement.id}) }}"><button type="button" class="btn btn-danger">{{ "Delete" | trans }}</button></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}