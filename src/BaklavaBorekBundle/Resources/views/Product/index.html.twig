{% extends "BaklavaBorekBundle::layout.html.twig" %}

{% block content %}
    <a class="index-create-product" href="{{ path('BaklavaBorekBundle_Product_create') }}"><button type="button" class="btn btn-success">{{ "Create Product" | trans }}</button></a>
    <table class="order-data-table table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "Product ID" | trans }}</th>
            <th>{{ "Product Name" | trans }}</th>
            <th>{{ "Created At" | trans }}</th>
            <th>{{ "Updated At" | trans }}</th>
            <th>{{ "Operations" | trans }}</th>
        </tr>
        </thead>

        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.created|date('Y-m-d') }}</td>
                <td>{{ product.updated|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('BaklavaBorekBundle_Product_edit', {'productId': product.id}) }}"><button type="button" class="btn btn-primary">{{ "Edit" | trans }}</button></a>
                    <a href="{{ path('BaklavaBorekBundle_Product_delete', {'productId': product.id}) }}"><button type="button" class="btn btn-danger">{{ "Delete" | trans }}</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}