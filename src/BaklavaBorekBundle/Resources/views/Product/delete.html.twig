{% extends "BaklavaBorekBundle::layout.html.twig" %}

{% block content %}
    <div class="x_panel">
        <div class="x_title">
            <h2>{% block form_name %}{{ "Delete Product" | trans }}{% endblock %}</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
        {{ form_start(form) }}
            {{ form_row(form.productId) }}
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <p>{{ "Are you sure want to delete <i>%name% (%productId%)</i>?" | trans({'%name%': product.name, '%productId%': product.id}) | raw }}</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <a href="{{ path('BaklavaBorekBundle_Product_index') }}"><button type="button" class="btn btn-primary">{{ "Cancel" | trans }}</button></a>
                    <button type="submit" class="btn btn-success">{{ "Delete" | trans }}</button>
                </div>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}